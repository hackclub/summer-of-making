#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# If running the rails server then create or migrate existing database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  ./bin/rails db:prepare
  
  # Start memory leak debugging if enabled
  if [ "${MEMORY_DEBUG_ENABLED}" = "true" ]; then
    echo "[MLD] Starting memory leak debugging with anacron..."
    
    # Create anacron spool directory for this user
    mkdir -p /tmp/anacron-spool
    
    # Start anacron in background with custom config
    anacron -s -t /rails/config/anacrontab -S /tmp/anacron-spool -d > /tmp/anacron.log 2>&1 &
    echo "[MLD] Anacron started in background for memory monitoring"
  fi
fi

exec "${@}"
