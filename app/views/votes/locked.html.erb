<div class="px-4 md:px-8">
  <%= render "shared/page_title",
    title: "Vote",
    subtitle: "Vote on others' projects to get payouts!" %>

  <%= render "shared/card", classes: "text-lg text-center", padding: "lg" do %>
    <% if defined?(Flipper) && Flipper.enabled?(:lock_voting, current_user) %>
      <p class="mb-4">You've been submitting too many low-quality votes.</p>
      <p>Please take a break and review the guidelines before voting again.</p>
    <% else %>
      <p class="mb-4">Voting will begin globally after 100 certified projects with at least 10 hours of coding time have been shipped!</p>
      <p class="text-2xl"><%= @full_projects_count %> / 100 approved 10+ hr projects</p>
      <p>(<%= @approve_projects_count %> certified projects, any amount of coding time)</p>
    <% end %>
  <% end %>
</div>
