            <%= image_tag "puppyeyes.png", class: "w-32 h-32 2xl:w-64 2xl:h-64 mx-auto mb-4 transform scale-x-[-1]", alt: "Puppy Eyes" %>
            <p class="text-gray-600 text-center text-xl">No followers yet</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

