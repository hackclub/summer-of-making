<%= render C::Container.new(no_padding: true, attr: { class: "transform hover:scale-[1.02] 2xl:hover:scale-[1.05] hover:shadow-lg transition-transform duration-300" }) do %>
    <div class="flex flex-col h-full gap-3">
      <% project_image = project.banner.attached? ? url_for(project.banner) : "https://hc-cdn.hel1.your-objectstorage.com/s/v3/42eb885e3ebc20bd5e94782b7b4bcb31bcc956d3_i.png" %>
      <%= link_to project_path(project) do %>
        <div class="h-40 md:h-52 2xl:h-60">
          <img src="<%= project_image %>" alt="<%= project.title %>" class="w-full h-full object-cover" loading="lazy">
        </div>
      <% end %>
      <div class="flex flex-col flex-grow py-2 px-4">
        <div class="flex items-start justify-between gap-2">
          <div class="min-w-0">
            <h2 class="text-2xl md:text-2xl 2xl:text-3xl line-clamp-1 mb-0.5"><%= link_to project.title, project_path(project), class: "hover:underline" %></h2>
            <p class="text-xs md:text-sm text-som-detail">
              by <%= link_to project.user.display_name, user_path(project.user), class: "hover:underline" %>
              • <%= time_ago_in_words(project.created_at) %> ago
              • <%= project.devlogs_count %> devlogs
            </p>
          </div>
          <% if user_signed_in? && current_user != project.user %>
            <%= render "projects/follow_button", project: project, following: (defined?(@followed_project_ids) ? @followed_project_ids&.include?(project.id) : nil), variant: :icon %>
          <% end %>
        </div>
        <p class="line-clamp-3 text-sm md:text-base 2xl:text-lg overflow-hidden mt-1 min-h-[63px] md:min-h-[72px] 2xl:min-h-[81px]"><%= project.description %></p>
      </div>
    </div>
<% end %>
