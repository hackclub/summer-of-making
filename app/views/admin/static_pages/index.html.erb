<div class="agrid" style="max-width: 700px; grid-template-columns: repeat(2, minmax(0, 1fr)); gap: 1.2em;">
  <%= render partial: "tool", locals: { path: admin_shop_items_path, label: "Shop Items" } if @admin_signed_in %>
  <%= render partial: "tool", locals: { path: admin_users_path, label: "Users" } %>
