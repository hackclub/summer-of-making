<body class="adash" style="background: var(--color-background); color: var(--color-text); min-height: 100vh; padding: 2rem;">

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
  <h1>Ship Certifications
    <span class="pill pill-<%= case @filter
      when 'pending' then 'yellow'
      when 'approved' then 'green'
      when 'rejected' then 'red'
      when 'returned' then 'orange'
      when 'all' then 'dark'
      else 'gray'
    end %>" style="font-size: 0.6em; margin-left: 0.5rem;">
      <%= @filter.capitalize %>
    </span>
    <% if @category_filter.present? %>
      <span class="pill pill-green" style="font-size: 0.6em; margin-left: 0.5rem;">
        <%= @category_filter %>
      </span>
    <% end %>
  </h1>
  <div style="display: flex; gap: 1rem;">
    <%= link_to "View Logs", logs_admin_ship_certifications_path, class: "pill pill-gray", style: "text-decoration: none; padding: 0.5rem 1rem;" %>
    <%= link_to "Low Quality Dashboard", admin_low_quality_dashboard_index_path, class: "pill pill-gray", style: "text-decoration: none; padding: 0.5rem 1rem;" %>
    <%= link_to "Payout Requests", admin_ship_reviewer_payout_requests_path, class: "pill pill-blue", style: "text-decoration: none; padding: 0.5rem 1rem;" %>
    <% if current_user&.admin_or_ship_certifier? && ShipReviewerPayoutService.can_request_payout?(current_user) %>
      <%= button_to "Request Payout", ship_reviewer_payout_requests_path, method: :post, class: "pill pill-green", style: "border: none; text-decoration: none; padding: 0.5rem 1rem; cursor: pointer;" %>
    <% end %>
  </div>
</div>

<div style="display: flex; gap: 2rem; margin-bottom: 2rem;">
  <div style="background: var(--color-card); padding: 1rem; border-radius: 8px; flex: 1;">
    <h3>The Stats</h3>
    <p><strong>Total Judged:</strong> <span class="pill pill-dark"><%= @total_approved + @total_rejected %></span></p>
    <p><strong>Approved:</strong> <span class="pill pill-green"><%= @total_approved %></span></p>
    <p><strong>Rejected:</strong> <span class="pill pill-red"><%= @total_rejected %></span></p>
    <p><strong>Pending:</strong> <span class="pill pill-yellow"><%= @total_pending %></span></p>
    <% if @total_approved + @total_rejected > 0 %>
      <p><strong>Presidential Approval Rate:</strong> <span style="font-weight: bold;"><%= ((@total_approved.to_f / (@total_approved + @total_rejected)) * 100).round(1) %>%</span></p>
    <% end %>
    <% if @avg_turnaround %>
      <p><strong>Avg Queue Time:</strong>
        <span style="font-weight: bold;">
          <% if @avg_turnaround[:d] > 0 %>
            <%= @avg_turnaround[:d] %>d <%= @avg_turnaround[:h] % 24 %>h
          <% elsif @avg_turnaround[:h] > 0 %>
            <%= @avg_turnaround[:h] %>h <%= @avg_turnaround[:m] %>m
          <% else %>
            <%= @avg_turnaround[:m] %>m
          <% end %>
        </span>
      </p>
    <% end %>
    <p><strong>decisions in the past day:</strong> <span class="pill pill-dark"><%= @decided_last_24h %></span></p>
    <p><strong>new ships in the past day:</strong> <span class="pill pill-dark"><%= @submitted_last_24h %></span></p>
  </div>

  <div style="background: var(--color-card); padding: 1rem; border-radius: 8px; flex: 2;">
    <h3>Shipwright Leaderboard</h3>
    <div id="b">
      <p style="margin-bottom: 0.5rem; font-size: 0.95em; color: var(--color-primary);">This week (Sunday-Sunday EST)</p>
      <% if @leaderboard_week.any? %>
        <table style="width: 100%; font-size: 0.9rem;">
          <thead>
            <tr>
              <th style="text-align: left;">Shipwright</th>
              <th style="text-align: right;">Ships inspected</th>
            </tr>
          </thead>
          <tbody>
            <% @leaderboard_week.each do |name, email, count| %>
              <tr style="background: <%= cycle('#1c1b22', '#414142') %>;">
                <td><%= name || email %></td>
                <td style="text-align: right;"><%= count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>nuthing here!</p>
      <% end %>
    </div>
    <button id="sd" class="abtn small">show daily leaderboard</button>
    <div id="d" style="display: none; margin-top: 1rem;">
      <p style="margin-bottom: 0.5rem; font-size: 0.95em; color: var(--color-primary);">Past 24 hours</p>
      <% if @leaderboard_day && @leaderboard_day.any? %>
        <table style="width: 100%; font-size: 0.9rem;">
          <thead>
            <tr>
              <th style="text-align: left;">Shipwright</th>
              <th style="text-align: right;">Ships inspected</th>
            </tr>
          </thead>
          <tbody>
            <% @leaderboard_day.each do |name, email, count| %>
              <tr>
                <td><%= name || email %></td>
                <td style="text-align: right;"><%= count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>nuthing here!</p>
      <% end %>
    </div>
    <button id="a" class="abtn small">how about all time?</button>
    <div id="c" style="display: none; margin-top: 1rem;">
      <p style="margin-bottom: 0.5rem; font-size: 0.95em; color: var(--color-primary);">All time</p>
      <% if @leaderboard_all.any? %>
        <table style="width: 100%; font-size: 0.9rem;">
          <thead>
            <tr>
              <th style="text-align: left;">Shipwright</th>
              <th style="text-align: right;">Ships inspected</th>
            </tr>
          </thead>
          <tbody>
            <% @leaderboard_all.each do |name, email, count| %>
              <tr>
                <td><%= name || email %></td>
                <td style="text-align: right;"><%= count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>nuthing here!</p>
      <% end %>
    </div>
    <button id="p" class="abtn small">payment stats?</button>
    <div id="payments" style="display: none; margin-top: 1rem;">
      <p style="margin-bottom: 0.5rem; font-size: 0.95em; color: var(--color-primary);">Payment Stats (Shells per Review)</p>
      <% if @payment_stats.any? %>
        <table style="width: 100%; font-size: 0.9rem;">
          <thead>
            <tr>
              <th style="text-align: left;">Shipwright</th>
              <th style="text-align: right;">Total Shells Owed</th>
              <th style="text-align: right;">Shells per Review</th>
              <th style="text-align: center;">Payout request</th>
            </tr>
          </thead>
          <tbody>
            <% @payment_stats.each do |name, email, total_paid, shells_per_review, pending_amount| %>
              <% reviewer = User.find_by(display_name: name) || User.find_by(email: email) %>
              <tr>
                <td>
                  <%= name || email %>
                  <% if pending_amount > 0 %>
                    <br><small style="color: #FFB347;">+<%= pending_amount %> pending</small>
                  <% end %>
                </td>
                <td style="text-align: right;"><%= total_paid %></td>
                <td style="text-align: right;"><%= shells_per_review %></td>
                <td style="text-align: center;">
                  <% if reviewer == current_user && ShipReviewerPayoutService.can_request_payout?(current_user) %>
                    <%= button_to "Request Payout", ship_reviewer_payout_requests_path, method: :post, class: "pill pill-green", style: "border: none; padding: 0.3rem 0.6rem; cursor: pointer; font-size: 0.8rem;" %>
                  <% elsif reviewer == current_user %>
                    <small style="color: var(--color-text-muted);">Not eligible</small>
                  <% else %>
                    <span style="color: var(--color-text-muted);">-</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>nuthing here!</p>
      <% end %>
    </div>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var a = document.getElementById('a');
        var b = document.getElementById('b');
        var c = document.getElementById('c');
        var sd = document.getElementById('sd');
        var d = document.getElementById('d');
        sd.addEventListener('click', function() {
          b.style.display = 'none';
          sd.style.display = 'none';
          d.style.display = 'block';
        });
        a.addEventListener('click', function() {
          b.style.display = 'none';
          a.style.display = 'none';
          c.style.display = 'block';
          sd.style.display = 'none';
          d.style.display = 'none';
        });
        var p = document.getElementById('p');
        var payments = document.getElementById('payments');
        p.addEventListener('click', function() {
          b.style.display = 'none';
          c.style.display = 'none';
          d.style.display = 'none';
          a.style.display = 'none';
          sd.style.display = 'none';
          p.style.display = 'none';
          payments.style.display = 'block';
        });
      });
    </script>
  </div>
</div>

<div style="margin-bottom: 2rem;">
  <h3>Filter by type</h3>
  <div style="display: flex; gap: 1rem; margin-top: 0.5rem; flex-wrap: wrap;">
    <%= link_to admin_ship_certifications_path(filter: @filter), class: "pill #{@category_filter.blank? ? 'pill-dark' : 'pill-gray'}", style: "text-decoration: none; padding: 0.5rem 1rem;" do %>
      All types (<%= @category_counts.values.sum %>)
    <% end %>
    <% @category_counts.sort.each do |cert_type, count| %>
      <% next if cert_type.blank? %>
      <%= link_to admin_ship_certifications_path(filter: @filter, category_filter: cert_type), class: "pill #{@category_filter == cert_type ? 'pill-green' : 'pill-gray'}", style: "text-decoration: none; padding: 0.5rem 1rem;" do %>
        <%= cert_type.humanize %> (<%= count %>)
      <% end %>
    <% end %>
    <%= link_to admin_ship_certifications_path(filter: @filter, category_filter: nil), class: "pill #{@category_filter.nil? ? 'pill-green' : 'pill-gray'}", style: "text-decoration: none; padding: 0.5rem 1rem;" do %>
      No type (<%= @no_type_count %>)
    <% end %>
  </div>
</div>

<div style="margin-bottom: 2rem;">
  <h3>Filter by Status</h3>
  <div style="display: flex; gap: 1rem; margin-top: 0.5rem;">
    <%= link_to admin_ship_certifications_path(filter: 'pending', category_filter: @category_filter), class: "pill #{@filter == 'pending' ? 'pill-yellow' : 'pill-gray'}", style: "text-decoration: none; padding: 0.5rem 1rem;" do %>
      Pending (<%= @total_pending %>)
    <% end %>
    <%= link_to admin_ship_certifications_path(filter: 'approved', category_filter: @category_filter), class: "pill #{@filter == 'approved' ? 'pill-green' : 'pill-gray'}", style: "text-decoration: none; padding: 0.5rem 1rem;" do %>
      Approved (<%= @total_approved %>)
    <% end %>
    <%= link_to admin_ship_certifications_path(filter: 'rejected', category_filter: @category_filter), class: "pill #{@filter == 'rejected' ? 'pill-red' : 'pill-gray'}", style: "text-decoration: none; padding: 0.5rem 1rem;" do %>
      Rejected (<%= @total_rejected %>)
    <% end %>
    <%= link_to admin_ship_certifications_path(filter: 'returned', category_filter: @category_filter), class: "pill #{@filter == 'returned' ? 'pill-orange' : 'pill-gray'}", style: "text-decoration: none; padding: 0.5rem 1rem;" do %>
      Returned (<%= @total_returned %>)
    <% end %>
    <%= link_to admin_ship_certifications_path(filter: 'all', category_filter: @category_filter), class: "pill #{@filter == 'all' ? 'pill-dark' : 'pill-gray'}", style: "text-decoration: none; padding: 0.5rem 1rem;" do %>
      All (<%= @total_approved + @total_rejected + @total_pending + @total_returned %>)
    <% end %>
  </div>
</div>

<div style="margin-bottom: 2rem;">
  <h3>Advanced Sorting Options</h3>
  <div style="display: flex; gap: 1rem; margin-top: 0.5rem; flex-wrap: wrap;">
    <%= link_to admin_ship_certifications_path(filter: @filter, category_filter: @category_filter, sort_by: 'oldest_first'), class: "pill #{@sort_by == 'oldest_first' ? 'pill-green' : 'pill-gray'}", style: "text-decoration: none; padding: 0.5rem 1rem;" do %>
      Oldest in Queue
    <% end %>
    <%= link_to admin_ship_certifications_path(filter: @filter, category_filter: @category_filter, sort_by: 'newest_first'), class: "pill #{@sort_by == 'newest_first' ? 'pill-blue' : 'pill-gray'}", style: "text-decoration: none; padding: 0.5rem 1rem;" do %>
      Newest in Queue
    <% end %>
    <%= link_to admin_ship_certifications_path(filter: @filter, category_filter: @category_filter, sort_by: 'most_votes'), class: "pill #{@sort_by == 'most_votes' ? 'pill-pink' : 'pill-gray'}", style: "text-decoration: none; padding: 0.5rem 1rem;" do %>
      Most in Queue
    <% end %>
  </div>
  <p style="margin-top: 0.5rem; font-size: 0.9rem; color: var(--color-text-muted);">
    <strong style="color: #FFB347; font-family: 'Comic Sans MS', cursive;">Tip:</strong> Use "Oldest in Queue" to
    prioritize projects that have been waiting longest for certification!
  </p>
</div>

<table class="atable">
  <thead>
    <tr>
      <th>Ship ID</th>
      <th>Project</th>
      <th>Verdict</th>
      <th>Certifier</th>
      <th>Created At</th>
      <th>Dev Time</th>
      <th>User Votes</th>
    </tr>
  </thead>
  <tbody>
    <% @ship_certifications.each do |ship_certification| %>
      <tr>
        <td><%= link_to ship_certification.id, edit_admin_ship_certification_path(ship_certification), style: "color: var(--color-link); text-decoration: underline;" %></td>
        <td>
          <div>
            <strong><%= link_to ship_certification.project.title, edit_admin_ship_certification_path(ship_certification) %></strong>
            <br>
            <small style="color: var(--color-text-muted);">
              Project ID: <%= ship_certification.project.id %>
            </small>
            <br>
            <small style="color: var(--color-text-muted);">
              Type: <%= ship_certification.project.certification_type&.humanize %>
            </small>
          </div>
        </td>
        <td>
          <% if ship_certification.ysws_returned? %>
            <span class="pill pill-orange">RETURNED BY ADMIN</span>
            <% if ship_certification.ysws_feedback_reason_labels.any? %>
              <br>
              <small style="color: var(--color-text-muted); font-size: 0.75em; margin-top: 0.3rem; display: block;">
                <%= ship_certification.ysws_feedback_reason_labels.join(", ") %>
              </small>
            <% end %>
            <% if ship_certification.ysws_returned_by_id && @returned_by_users&.dig(ship_certification.ysws_returned_by_id) %>
              <br>
              <small style="color: var(--color-text-muted); font-size: 0.75em;">
                by <%= @returned_by_users[ship_certification.ysws_returned_by_id].display_name %> • <%= time_ago_in_words(ship_certification.ysws_returned_at) %> ago
              </small>
            <% end %>
          <% else %>
            <% case ship_certification.judgement %>
            <% when 'approved' %>
              <span class="pill pill-green">Approved</span>
            <% when 'rejected' %>
              <span class="pill pill-red">Rejected</span>
            <% else %>
              <span class="pill pill-yellow">Pending</span>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if ship_certification.reviewer %>
            <%= ship_certification.reviewer.display_name || ship_certification.reviewer.email %>
          <% else %>
            <span style="color: var(--color-text-muted);">-</span>
          <% end %>
        </td>
        <td>
          <div>
            <%= ship_certification.created_at.strftime("%m/%d/%Y") %>
            <br>
            <small style="color: var(--color-text-muted);">
              <%= time_ago_in_words(ship_certification.created_at) %> ago
            </small>
          </div>
        </td>
        <td><%= format_seconds ship_certification.devlogs_seconds_total %></td>
        <td><%= @vote_counts[ship_certification.project.user_id] || 0 %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</body>
