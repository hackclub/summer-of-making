<div class="fixed bottom-0 left-0 right-0 bg-forest flex justify-around items-center py-2 px-2 text-soft-bone z-50">

  <%= link_to explore_path, class: "flex flex-col items-center #{'text-saddle-taupe' if current_page?(explore_path)}" do %>
    <%= inline_svg "downasaur.svg", class: "h-8 w-8" %>
    <span class="text-xs mt-1">Explore</span>
  <% end %>

  <%= link_to gallery_path, class: "flex flex-col items-center #{'text-saddle-taupe' if current_page?(gallery_path)}" do %>
    <%= inline_svg "gallery.svg", class: "h-8 w-8" %>
    <span class="text-xs mt-1">Gallery</span>
  <% end %>

  <%= link_to my_projects_path, class: "flex flex-col items-center #{'text-saddle-taupe' if current_page?(my_projects_path) || (controller_name == 'projects' && action_name == 'show' && @project&.user == current_user)}" do %>
    <%= inline_svg "radio-tower.svg", class: "h-8 w-8" %>
    <span class="text-xs mt-1">Projects</span>
  <% end %>

  <%= link_to new_vote_path, class: "flex flex-col items-center #{'text-saddle-taupe' if current_page?(new_vote_path)}" do %>
    <%= inline_svg "trophy.svg", class: "h-8 w-8" %>
    <span class="text-xs mt-1">Vote</span>
  <% end %>

  <%= button_to logout_path, method: :delete, class: "flex flex-col items-center" do %>
    <%= inline_svg "logout.svg", class: "h-8 w-8" %>
    <span class="text-xs mt-1">Logout</span>
  <% end %>
</div>
