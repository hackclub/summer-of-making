<%
  max_width = local_assigns.fetch(:max_width, 'max-w-lg')
  classes = local_assigns.fetch(:classes, '')
%>

<div id="<%= id %>" data-controller="modal" class="m hidden fixed inset-0 z-50 overflow-auto bg-black/30 flex items-center justify-center p-2 md:p-4">
  <%= render C::Card.new(
      css_classes: "c w-full #{max_width} mx-2 md:mx-auto relative max-h-[85vh] flex flex-col #{classes} transform transition-all duration-300 ease-out scale-95 opacity-0 translate-y-4",
      padding: "0") do %>
    <div class="p-4 md:p-5 flex-shrink-0">
      <div class="flex justify-between items-center">
        <h3 class="text-lg md:text-2xl leading-snug"><%= title %></h3>
        <button type="button" class="hover:text-vintage-red cursor-pointer transition-colors duration-200" data-action="click->modal#close">
          <%= inline_svg "icons/close.svg", class: "h-6 w-6 2xl:h-8 2xl:w-8" %>
        </button>
      </div>
    </div>

    <div class="p-4 md:p-5 overflow-y-auto" data-modal-target="container">
      <%= yield %>
    </div>
  <% end %>
</div>

<style>
  .m {
    backdrop-filter: blur(2px);
    transition: opacity 0.3s ease-out, backdrop-filter 0.3s ease-out;
  }

  .m.hidden {
    opacity: 0;
    backdrop-filter: blur(0px);
  }

  .m:not(.hidden) {
    opacity: 1;
    backdrop-filter: blur(2px);
  }

  .m:not(.hidden) .c {
    transform: scale(1) translateY(0);
    opacity: 1;
  }
</style>
