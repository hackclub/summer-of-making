<%# Achievement-style badge - bigger and more square %>
<div class="inline-flex items-center justify-center w-12 h-12 border-2 <%= badge[:color] %> font-bold text-xl cursor-help transition-all duration-200 hover:scale-110 hover:shadow-lg relative group">
  <% if badge[:icon].include?('.') %>
  <% if badge[:full_size_icon] %>
    <%= image_tag(badge[:icon], width: "48px", height: "48px", class: "object-contain") %>
  <% else %>
    <%= image_tag(badge[:icon], width: "24px", height: "24px", class: "object-contain") %>
  <% end %>
  <% else %>
    <span><%= badge[:icon] %></span>
  <% end %>

  <!-- Tooltip on hover -->
  <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-2 bg-gray-900 text-white text-sm rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none z-10 whitespace-nowrap">
    <div class="font-bold"><%= badge[:name] %></div>
    <div class="text-gray-300 text-xs"><%= badge[:flavor_text] %></div>
    <div class="absolute top-full left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-gray-900"></div>
  </div>
</div>
