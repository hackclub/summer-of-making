<% content_for :head do %>
  <style>
    .definition-paper .inline-cta-note {
      opacity: 0.85;
    }

    .definition-paper .balloon-brigade-boat {
      position: absolute;
      right: -10px;
      bottom: -45px;
      width: 120px;
      pointer-events: none;
      z-index: 20;
      filter: drop-shadow(0 2px 2px rgba(0,0,0,0.15));
      display: none;
    }
    @media (min-width: 640px) {
      .definition-paper .balloon-brigade-boat { display: block; }
    }
    @media (min-width: 768px) {
      .definition-paper .balloon-brigade-boat {
