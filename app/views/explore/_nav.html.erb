<div class="flex flex-col justify-between items-start mb-4 md:mb-6 px-4 md:px-8 pt-2 md:pt-8 pb-2 max-w-7xl mx-auto">
  <div class="flex justify-between items-center w-full flex-wrap">
    <div class="flex justify-center gap-16 w-full font-dynapuff">
      <% current = request.path %>
      <%= render C::Link.new(
            target: explore_path,
            text: "Devlogs",
            icon: "globe",
            css_class: "cursor-pointer",
            large: true,
            highlight: current == explore_path) %>

      <% if user_signed_in? && current_user.followed_projects.any? %>
        <%= render C::Link.new(
              target: explore_following_path,
              text: "Following",
              icon: "heart",
              css_class: "cursor-pointer",
              large: true,
              highlight: current == explore_following_path) %>
      <% end %>

      <%= render C::Link.new(
            target: explore_gallery_path,
            text: "Gallery",
            icon: "map",
            css_class: "cursor-pointer",
            large: true,
            highlight: current == explore_gallery_path) %>
    </div>
  </div>
</div>
